<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd><br/>

        <%= form_for [@product, @review] do |r| %>
          <%= r.label :description %>
          <%= r.text_field :description %>

          <%= r.label :rating %>
          <%= r.text_field :rating %> <br/ >
          <%= r.submit 'Submit' %>
        <% end %>



        <% @reviews.each do |r| %>
          <dd>User: <%= r.user_id %></dd>
          <dd>Review: <%= r.description %></dd>
          <dd>Rating: <%= r.rating %></dd>
            <% if current_user.id == r.user_id %>
                <dd> <%= link_to 'Delete', [@product, @review], method: :delete %> </dd>
            <% end %>
          <br />
        <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
